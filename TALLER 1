        "def validate_dna (dna_seq):\n",
        "  seqm = dna_seq.upper()\n",
        "  valid = seqm.count(\"A\") + seqm.count(\"C\") + seqm.count(\"G\") + seqm.count(\"T\") + seqm.count('X')\n",
        "  if valid == len(seqm):\n",
        "    return True\n",
        "  else:\n",
        "    return False"
      ]
    },
